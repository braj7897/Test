      if(Build==Test)
      steps {
        sleep 5
      }
      else()
      {
        echo 'fail'
      }
    }
    stage('Test') {
      steps {
        echo 'all is well and  fail'
      }
    }
    stage('Unit') {
      steps {
        echo 'hii'
      }
    }
  }
}
